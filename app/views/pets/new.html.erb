<p><%= link_to("List of Shelters", "/shelters") %></p>

<h1>Create New Pet</h1>

<%= form_tag "/shelters/:id/pets" do %>
  <%= label_tag :image %>
  <%= text_field_tag :image %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age %>
  <%= label_tag "Sex" %>
  <%= select_tag :sex, options_for_select([["Male", "Male"],["Female", "Female"]]) %>
  <%= hidden_field_tag :shelter_id, @shelter.id %>

  <%= submit_tag "Create Pet" %>
<% end %>'
